{% extends '::base.html.twig' %}
{% block body %}
    <h2>All users</h2>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Name</th>
            <th>Role</th>
            <th>E-mail</th>
            <th>Default action</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.name }}</td>
                <td>
                    {% for role in entity.roles %}
                        <ul>
                            <li>
                                {{ role }}
                            </li>
                        </ul>
                    {% endfor %}
                </td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.defaultAction }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ens_add_admin_role', { 'user':  entity.username } ) }}">
                                Add admin role
                            </a>
                        </li>
                    </ul>
                    <ul>
                        <li>
                            <a href="{{ path('ens_remove_admin_role', { 'user':  entity.username } ) }}">
                                Remove admin role
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}