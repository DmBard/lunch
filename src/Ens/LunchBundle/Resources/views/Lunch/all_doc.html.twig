{% block body %}
    <h1>All files</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Path</th>
            <th>Name</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</a></td>
                <td>{{ entity.path }}</td>
                <td>{{ entity.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}