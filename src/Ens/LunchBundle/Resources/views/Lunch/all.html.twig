{% block body %}
    <h1>All menu list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Category</th>
            <th>Day</th>
            <th>Description</th>
            <th>Count</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ens_lunch_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.categories }}</td>
                <td>{{ entity.day }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.count }}</td>
                <td>{{ entity.active }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ens_lunch_upload') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}