{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lunch list</h1>
    <table class="records_list">
        <thead>
        <tr>
            <th></th>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
        </tr>
        </thead>
        <tbody>

        {% for category in categories %}
            <tr>
                <td>{{ category }}</td>
                {% for day in days %}
                    <td>
                        <label>
                            <select name={{ category }}{{ day }}>
                                {% for entity in entities %}
                                    {% if ((entity.day  ==  day ) and (entity.categories  ==  category ) ) %}
                                        <option value=entity.id>{{ entity.description }}</option>
                                     {% endif %}
                                {% endfor %}
                            </select>
                        </label>
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}

        <tr>
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('ens_lunch_new') }}">
                Save
            </a>
        </li>
    </ul>
    <ul>
        <li>
            <a href="{{ path('ens_lunch_new') }}">
                Create a new menu
            </a>
        </li>
    </ul>
    <ul>
        <li>
            <a href="{{ path('ens_lunch_show_all') }}">
                Show all
            </a>
        </li>
    </ul>
{% endblock %}
