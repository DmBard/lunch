{% extends '::base.html.twig' %}

{% block body -%}
    <style>
        select {
            width: 300px;
        }
    </style>
    <form action="{{ path('ens_lunch_order') }}" method="post">
        <div align="right"><h4>
                You are logged as:
                <a href="{{ path('ens_lunch_my_order') }}">
                    {{ user.username }} ({{ user.name }}) </a> |
                {% if  isShowAdminLink %}
                    <a href="{{ path('ens_lunch_admin') }}">
                        Admin panel | </a>
                {% endif %}
                <a href="{{ path('fos_user_security_logout') }}">
                    Logout </a>
            </h4></div>
        <h2>MENU {{ dateperiod }}</h2>

        <h3><font color="red">{{ warning }} </font></h3>
        <h3><font color="red">{{ remainingTime }}</font></h3>

        Select your floor!
            <select name="floor">
                <option value="floor_4">4 floor</option>
                <option value="floor_5">5 floor</option>
            </select>

        <table class="records_list">
            <thead>
            <tr>
                <th></th>
                <th>Monday</th>
                <th>Tuesday</th>
                <th>Wednesday</th>
                <th>Thursday</th>
                <th>Friday</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category }}</td>
                    {% for day in days %}
                        <td>
                            <label>
                                <select name="{{ category }}[{{ day }}]">
                                    {% for entity in entities %}
                                        {% if ((entity.day  ==  day ) and (entity.categories  ==  category ) and (entity.active  ==  true )) %}
                                            <option value="{{ entity.id }}">{{ entity.description }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </label>
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
            <tr>
                <td>
                    <input type="submit" value="Save">
                    <input type="checkbox" name="random_mode">Random<Br>
                </td>
            </tr>
            </tbody>
        </table>
    </form>
{% endblock %}
